<h1>タスクリスト</h1>

<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>

<ul>
  <% @task.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %> : <%= task.status %></li>
  <% end %>
  
</ul>

<%= link_to '新規タスクの作成', new_task_path %>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Microposts</h1>
      <%= link_to 'Sign up now!', new_user_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>